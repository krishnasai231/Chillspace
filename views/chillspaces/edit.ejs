<%-include ("../partials/header"); -%>
<div class="container">
  <div class="row">
    <h1 style="text-align:center">Edit <%=chillspace.name%></h1>
    <div style="width:30%; margin:25px auto;">
      <form action="/chillspace/<%=chillspace._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="chillspace[name]" value="<%=chillspace.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="chillspace[image]" value="<%=chillspace.image%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="chillspace[description]" value="<%=chillspace.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/chillspace">GO back</a>
    </div>
  </div>
</div>
<%- include ("../partials/footer"); -%>