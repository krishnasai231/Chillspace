<%-include ("../partials/header"); -%>

<body style="background-color:rgb(85, 204, 61);">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead">𝓙υ𝓢Ŧ ℂ𝐡𝒾ℓ𝕝</p>
        <div class="list-group">
          <li class="list-group-item active">Add More Chills</li>
          <li class="list-group-item">Give comments</li>
          <li class="list-group-item">Add new buddies</li>
        </div>
      </div>
      <div class="col-md-9">
        <div class="thumbnail">
          <img class="img-responsive" src="<%=chillspace.image%>">
          <div class="caption-full">
            <h4><a><%=chillspace.name%></a></h4>
            <p><%=chillspace.description%></p>
            <p>
              <em> Submitted By <%=chillspace.author.username%></em>
            </p>
            <% if(currentUser && chillspace.author.id.equals(currentUser._id)){ %>
            <a class="btn btn-xs btn-warning" href="/chillspace/<%=chillspace._id%>/edit">Edit</a>
            <form id="delete-form" action="/chillspace/<%=chillspace._id%>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">Delete</button>
            </form>
            <%}%>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-secondary btn-lg active" href="/chillspace/<%= chillspace._id %>/comments/new">
            Add New Comment</a>
          </div>
        </div>
        <hr>
        <% chillspace.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%=comment.author.username %></strong>
            <span class="pull-right">10 days ago</span>
            <p>
              <%=comment.text%>
            </p>
            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
            <a class="btn btn-xs btn-warning"
              href="/chillspace/<%=chillspace._id%>/comments/<%=comment._id%>/edit">Edit</a>
            <form id="delete-form" action="/chillspace/<%=chillspace._id%>/comments/<%=comment._id%>?_method=DELETE"
              method="POST">
              <input type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
            <%}%>
        </div>
      </div>
      <%})%>
          </div>
        </div>
</body>



<%- include ("../partials/footer"); -%>